<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/storyName"
        android:layout_width="90dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storyDesc"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@+id/storyName"
        app:layout_constraintTop_toTopOf="@+id/storyName" />

    <TextView
        android:id="@+id/storyID"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyName" />
</androidx.constraintlayout.widget.ConstraintLayout>